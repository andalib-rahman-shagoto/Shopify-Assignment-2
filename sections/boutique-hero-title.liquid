<div class="container">
  <section class="py-5 bg-light">
    <div class="container">
      <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
        <div class="col-lg-6">
          <h1 class="h2 text-uppercase mb-0">{{ section.settings.title }}</h1>
        </div>
        <div class="col-lg-6 text-lg-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
              {% for block in section.blocks %}
                {% if forloop.rindex0 == 0 %}
                  <li class="breadcrumb-item active" aria-current="page">{{ section.settings.title }}</li>
                {% else %}
                  <li class="breadcrumb-item">
                    <a class="text-dark" href="{{ block.settings.link_page }}">
                      {{- block.settings.link_title -}}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </section>
</div>

{% schema %}
{
  "name": "Hero Title",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "Link",
      "type": "link",
      "settings": [
        {
          "type": "text",
          "id": "link_title",
          "label": "Link Title"
        },
        {
          "type": "url",
          "id": "link_page",
          "label": "Link Page",
        }
      ]
    }
  ]
}
{% endschema %}
