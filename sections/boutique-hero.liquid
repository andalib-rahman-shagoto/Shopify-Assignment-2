<div class="container">
  <section
    class="hero pb-3 bg-cover bg-center d-flex align-items-center"
    style="background: url({{ section.settings.hero_image | image_url }})"
  >
    <div class="container py-5">
      <div class="row px-4 px-lg-5">
        <div class="col-lg-6">
          <p class="text-muted small text-uppercase mb-2">{{ section.settings.hero_light_text }}</p>
          <h1 class="h2 text-uppercase mb-3">{{ section.settings.hero_bold_text }}</h1>
          <a class="btn btn-dark" href="shop.html">Browse collections</a>
        </div>
      </div>
    </div>
  </section>
  <!-- CATEGORIES SECTION -->
  <section class="pt-5">
    <header class="text-center">
      <p class="small text-muted small text-uppercase mb-1">{{ section.settings.category_light_text }}</p>
      <h2 class="h5 text-uppercase mb-4">{{ section.settings.category_bold_text }}</h2>
    </header>
    <div class="row">
      <div class="col-md-4">
        <a class="category-item" href="shop.html"
          ><img class="img-fluid" src="img/cat-img-1.jpg" alt=""><strong class="category-item-title">Clothes</strong></a
        >
      </div>
      <div class="col-md-4">
        <a class="category-item mb-4" href="shop.html"
          ><img class="img-fluid" src="img/cat-img-2.jpg" alt=""><strong class="category-item-title">Shoes</strong></a
        ><a class="category-item" href="shop.html"
          ><img class="img-fluid" src="img/cat-img-3.jpg" alt=""><strong class="category-item-title">Watches</strong></a
        >
      </div>
      <div class="col-md-4">
        <a class="category-item" href="shop.html"
          ><img class="img-fluid" src="img/cat-img-4.jpg" alt=""
          ><strong class="category-item-title">Electronics</strong></a
        >
      </div>
    </div>
  </section>
  <!-- TRENDING PRODUCTS -->
  <section class="py-5">
    <header>
      <p class="small text-muted small text-uppercase mb-1">{{ section.settings.products_light_text }}</p>
      <h2 class="h5 text-uppercase mb-4">{{ section.settings.products_bold_text }}</h2>
    </header>
    <div class="row">
      {% for product in section.settings.ft_collection.products limit: section.settings.limit_number %}
        <div class="col-xl-3 col-lg-4 col-sm-6">
          <div class="product text-center">
            <div class="position-relative mb-3">
              <div class="badge text-white bg-">
                {% comment %}
                  Add sale/new/sold here and bg-primary/info/danger for label in image
                {% endcomment %}
              </div>
              <a class="d-block" href="{{ product.url }}"
                ><img class="img-fluid w-100" src="{{ product.featured_image | image_url }}" alt="..."
              ></a>
              <div class="product-overlay">
                <ul class="mb-0 list-inline">
                  <li class="list-inline-item m-0 p-0">
                    <a class="btn btn-sm btn-outline-dark" href="#!"><i class="far fa-heart"></i></a>
                  </li>
                  <li class="list-inline-item m-0 p-0">
                    <a class="btn btn-sm btn-dark" href="cart.html">Add to cart</a>
                  </li>
                  <li class="list-inline-item me-0">
                    <a class="btn btn-sm btn-outline-dark" href="#productView" data-bs-toggle="modal"
                      ><i class="fas fa-expand"></i
                    ></a>
                  </li>
                </ul>
              </div>
            </div>
            <h6>
              <a class="reset-anchor" href="detail.html">{{ product.title }}</a>
            </h6>
            <p class="small text-muted">{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
  <!-- SERVICES -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="row text-center gy-3">
        {% for block in section.blocks %}
          <div class="col-lg-4">
            <div class="d-inline-block">
              <div class="d-flex align-items-end">
                <svg class="svg-icon svg-icon-big svg-icon-light">
                  <use xlink:href="#{{ block.settings.service_icon }}"> </use>
                </svg>
                <div class="text-start ms-3">
                  <h6 class="text-uppercase mb-1">{{ block.settings.service_title }}</h6>
                  <p class="text-sm mb-0 text-muted">{{ block.settings.service_text }}</p>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  <!-- NEWSLETTER -->
  <section class="py-5">
    <div class="container p-0">
      <div class="row gy-3">
        <div class="col-lg-6">
          <h5 class="text-uppercase">{{ section.settings.nl_bold_text }}</h5>
          <p class="text-sm text-muted mb-0">{{ section.settings.nl_light_text }}</p>
        </div>
        <div class="col-lg-6">
          <form action="#">
            <div class="input-group">
              <input
                class="form-control form-control-lg"
                type="email"
                placeholder="Enter your email address"
                aria-describedby="button-addon2"
              >
              <button class="btn btn-dark" id="button-addon2" type="submit">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

{% schema %}
{
  "name": "Boutique Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "hero_light_text",
      "label": "Hero Light Text"
    },
    {
      "type": "text",
      "id": "hero_bold_text",
      "label": "Hero Light Text"
    },
    {
      "type": "text",
      "id": "category_light_text",
      "label": "Category Light Text"
    },
    {
      "type": "text",
      "id": "category_bold_text",
      "label": "Category Bold Text"
    },
    {
      "type": "text",
      "id": "products_light_text",
      "label": "Products Light Text"
    },
    {
      "type": "text",
      "id": "products_bold_text",
      "label": "Products Bold Text"
    },
    {
      "type": "collection",
      "id": "ft_collection",
      "label": "Featured Collection"
    },
    {
      "id": "limit_number",
      "type": "range",
      "label": "Limit Number",
      "min": 2,
      "max": 8,
      "default": 4
    },
    {
      "type": "text",
      "id": "nl_bold_text",
      "label": "Newsletter Bold Text"
    },
    {
      "type": "text",
      "id": "nl_light_text",
      "label": "Newsletter Light Text"
    }

  ],
  "blocks": [
    {
      "name": "Service",
      "type": "service",
      "settings": [
        {
          "type": "text",
          "id": "service_title",
          "label": "Service Title"
        },
        {
          "type": "text",
          "id": "service_text",
          "label": "Service Text"
        },
        {
          "type": "textarea",
          "id": "service_icon",
          "label": "Service Icon"
        }
      ]
    }
  ]
}
{% endschema %}
